---
import Container from "../shared/Container.astro";
---

<section id="portfolio2">
  <Container className="space-y-8">
    <div class="max-w-full ml-4 mx-auto mb-[30px] text-center">
      <p class="text-heading-1 font-semibold text-2xl sm:text-3xl md:text-4xl"><b>Clientes</b> que nos eligen</p>

    </div>
    <div class="grid grid-cols-2 md:grid-cols-5 gap-4 ">
